<div class="page-header">
  <h3>Vehicles (<%= @user.vehicles.count %>)
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#newVehicle">
    <%= icon('fa fa-plus') %> Add vehicle
  </button>
  </h3>
</div>

<!-- Modal form to create new Vehicles -->
<%= render 'users/modal_new_vehicle' %>

<!-- Modal form to create new Insurance -->
<%= render 'users/modal_new_insurance' %>

<div class="row">
  <!-- List all user's vehicles, if any -->
  <% if @user.vehicles.any? %>
      <%= render @vehicles %>
  <% else %>
      <h3>There are no registered vehicles</h3>
  <% end %>
</div>


