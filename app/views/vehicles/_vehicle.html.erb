<div class="col-xs-18 col-sm-6 col-md-4">
  <div class="card radius shadowDepth1">
    <%= link_to [@user, vehicle] do %>
      <div class="card__image">
        <% if vehicle.vehicle_picture? %>
          <%= image_tag vehicle.vehicle_picture.url %>
        <% else %>
          <img src="http://lorempixel.com/400/200/transport/" alt="image" class="border-tlr-radius">
        <% end %>
      </div>
    <% end %>
    <div class="card__content card__padding">
      <div class="card__share">
        <%= link_to " ", edit_user_vehicle_path(@user, vehicle), id: "edit", class: "edit-button share-icon" %>
        <%= link_to " ", edit_image_user_vehicle_path(@user, vehicle), id: "picture", class: "pic-button share-icon" %>
      </div>
      <article class="card__article">
        <h2><%= link_to vehicle.name, [@user, vehicle] %></h2>
        <p>Matriculation date:<br>
        <%= vehicle.matriculation_date.strftime("%B %d, %Y") %></p>
        </article>
    </div>
    <div class="card-action">
      <span class="delete"><%= link_to '<i class="fa fa-car"></i> show details'.html_safe, [@user, vehicle] %></span>
    </div>
  </div>
</div>