<div class="col-xs-18 col-sm-6 col-md-4">
  <div class="card radius shadowDepth1">
    <div class="card__image">
      <img src="http://lorempixel.com/400/200/transport/" alt="image" class="border-tlr-radius">
    </div>
    <div class="card__content card__padding">
      <div class="card__share">
        <%= link_to " ", [@user, vehicle], id: "share", class: "share-toggle share-icon" %>
      </div>
      <article class="card__article">
        <h2><%= link_to vehicle.name, [@user, vehicle] %></h2>
        <p>Matriculation date: <%= vehicle.matriculation_date.strftime("%B %d, %Y") %></p>
        </article>
    </div>
    <div class="card-action">
      <span class="edit"><%= link_to '<i class="fa fa-cog"></i> edit'.html_safe, edit_user_vehicle_path(@user, vehicle) %></span>
      <span class="delete"><%= link_to '<i class="fa fa-trash"></i> delete'.html_safe, [@user, vehicle], method: :delete, data: { confirm: "You sure?" } %></span>
    </div>
  </div>
</div>